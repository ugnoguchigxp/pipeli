{
    "name": "pipeli-workspace",
    "private": true,
    "workspaces": [
        "sdk",
        "pipelines",
        "api"
    ],
    "scripts": {
        "check": "biome check --write .",
        "lint": "biome lint .",
        "format": "biome format --write .",
